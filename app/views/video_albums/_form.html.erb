<div class="container-fluid">
 <div class="row d-flex ">

 <div class="col-md-5 p-0">
     <div>
       <%= image_tag asset_path('background3.jpg'), :class => "img"%>
      </div>
  </div>
   <div class="col-md-5  align-item-center mb-5 ms-5 ">

   <div class="col-md-5 m-0 p-0 text-center mb-5 mt-5">
   <h1>CREATE  ALBUM</h1>
 </div>
     <%= form_with model: @video_album do |form| %>

       <div class="field fs-3 mt-3" >
         <%= form.label :title %><br>
         <%= form.text_field :title %>
       </div>
       <div class=" field fs-3 mt-3 ">
         <%= form.label :description %><br>
         <%= form.text_field :desc %>

       </div>
  
       <div class=" field fs-4 mt-3">
         <%= form.label :thumbnail, class: "fs-3" %><br>
         <%= form.file_field :thumbnail %>
       </div>

       <div class=" field  fs-4 mt-2">
         <%= form.label :video,  class: "fs-3"%><br>
         <%= form.file_field :video %>
       </div>

       <div class="field fs-3 mt-3">
         <%= form.label :Publish%>
         <%=form.check_box :Published %>
       </div>

       <div class="field fs-3 mt-3">
         <%= form.label :Tag%><br>
         <%= form.text_field :tag_list %>
       </div>

       <div class="mt-3 fs-3 ">
         <%= form.submit %>
       </div>
        <% end %>
      </div>

   </div>
  </div>
</div>
