<div class="container-fluid ">
 <div class="row d-flex ">

 <div class="col-md-5 p-0">
     <div class="w-50 h-50">
       <%= image_tag asset_path('background3.jpg'), :class => "img"%>
      </div>
   </div>
   <div class="col-md-6 m-5 align-item-center mb-5  col-lg-4  p-4 ">
     <div class="text-center mt-4">
       <h1>Create New Album</h1>
     </div>
     <div class="text-center my-auto mt-5 " >
       <%= form_with model:  @video_album do |form| %>
       <div class="field fs-4" >
         <%= form.label :title %><br>
         <%= form.text_field :title %>
       </div>
       <div class=" field fs-4 ">
         <%= form.label :description %><br>
         <%= form.text_field :desc %>
       </div>
  
       <div class=" field fs-5 mt-3">
         <%= form.label :thumbnail, class: "fs-4" %><br>
         <%= form.file_field :thumbnail %>
       </div>

       <div class=" field fs-5 mt-3">
         <%= form.label :video,  class: "fs-4"%><br>
         <%= form.file_field :video %>
       </div>

       <div class="fs-4 mt-2">
         <%= form.label :Publish%>
         <%=form.check_box :Published %>
       </div>

       <div class="fs-4 mt-2">
         <%= form.label :Tag%>
         <%= form.text_field :tag_list %>
       </div>

       <div class="mt-3 fs-4">
         <%= form.submit %>
       </div>
      <% end %>
      </div>
   </div>
  </div>
</div>