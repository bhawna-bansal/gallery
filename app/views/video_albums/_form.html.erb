<div class="container-fluid">
 <div class="row  ">

 <div class="d-none d-lg-block col-md-4 p-0">
     <div class="img">
       <%= image_tag asset_path('background3.jpg'), :class => "img-fluid h-100"%>
      </div>
  </div>
   <div class="col-lg-7 d-flex flex-column ">


   <h1 class=" text-center mt-5">CREATE  ALBUM</h1>
   <div class="mx-auto">

     <%= form_with model: @video_album do |form| %>

       <div class="field mt-3" >
         <%= form.label :title,:class=>"fs-3"%><br>
         <%= form.text_field :title,:class=>"fs-4" %>
       </div>
       <div class=" field  mt-3 ">
         <%= form.label :description,:class=>"fs-3" %><br>
         <%= form.text_field :desc,:class=>"fs-4" %>

       </div>
  
       <div class=" field  mt-3">
         <%= form.label :thumbnail,:class=>"fs-4"%><br>
         <%= form.file_field :thumbnail,:class=>"fs-4" %>
       </div>

       <div class=" field   mt-2">
         <%= form.label :video,:class=>"fs-4"%><br>
         <%= form.file_field :video,:class=>"fs-4"%>
       </div>

       <div class="field  mt-3">
         <%= form.label :Publish,:class=>"fs-4"%>
         <%=form.check_box :Published,:class=>"fs-4"%>
       </div>

       <div class="field mt-3">
         <%= form.label :Tag,:class=>"fs-4"%><br>
         <%= form.text_field :tag_list,:class=>"fs-4" %>
       </div>

       <div class="mt-3 fs-3 ">
         <%= form.submit %>
       </div>
        <% end %>
      </div>
</div>
   </div>
  </div>
</div>
