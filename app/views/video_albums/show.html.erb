<div class="container bs-tertiary-color mb-5">
<div class="row">
  <div class="col-md-8 offset-md-2 mt-2">
    <div class="d-flex justify-content-center">
      <%= video_tag rails_blob_path(@video_album.video), controls: true, class: "vid mt-4" %>
    </div>
    <h2 class="card-title color mt-4"><%= @video_album.title %></h2>
    <p class="card-text "><%= @video_album.desc %></p>
    <div class="d-flex justify-content-between align-items-center m-0 p-0">
      <small class="text-muted"><%= time_ago_in_words(@video_album.created_at) %> ago</small>
      <div class="btn-group">
        <% if @video_album.user == current_user %>
          <%= link_to "Edit", edit_video_album_path(@video_album), class: "btn btn-secondary text" %>
          <%= link_to "Delete", video_album_path(@video_album), class: "btn btn-danger", data: {
            turbo_method: :delete,
            turbo_confirm: "Are you sure you want to delete this video?"
          } %>
        <% end %>
      </div>
    </div>
    <div class="d-flex  mt-4 mb-5">
      <%= link_to "Back to homepage", root_path, class: "btn btn-danger text-white me-3" %>
      <%= link_to "Back to MyAlbums", video_albums_path, class: "btn btn-danger text-white" %>
    </div>
  </div>
</div>
</div>
