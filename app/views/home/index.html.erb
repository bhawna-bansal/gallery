<%= video_tag "video4.mp4", autoplay: :autoplay, loop: :loop, class: "video mt-3" %>
<div class="mt-3 video1 row">
  <%= search_form_for @q, url: root_path, html: { class: "col-md-6 mx-auto" } do |f| %>
      <%= f.search_field :tags_name_cont, class: " search", placeholder: "Search tag.... " %>
      <%= f.submit class:"search_btn color"%>
  <% end %>
</div>

<div class="container mt-5 mb-5">
  <div class="row">
    <% @video_albums.each do |video| %>
      <div class="col-md-4 mb-4">
        <div class="card">
          <%= link_to image_tag(video.thumbnail, class: "card-img-top thumbnail"), video_album_path(video) %>
          <div class="card-body">
            <h5 class="card-title fs-2 mx-auto"><%= link_to video.title, video_album_path(video), class: "color" %></h5>
            <p class="card-text text fs-3 mx-auto"><%= video.desc %></p>
            <p class="card-text mx-auto fs-4">Tag: <%= video.tag_list %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>