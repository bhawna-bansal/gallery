<div class="mt-3 video1">
  <%= search_form_for @q, url: root_path do |f| %>
   <%= f.search_field :tags_name_cont,class: "search" %>
   <%= f.submit %>
  <% end %>
</div>
<%= video_tag "video4.mp4", autoplay: :autoplay,loop: :loop,class:"video mt-3" %>
<div class="container mt-5 mb-5">
 <div class="row ">
   <%  @video_albums.each do |video| %>
     <div class="col-md-4 mt-4 mb-5">
       <div class="card">
       <%= link_to image_tag(video.thumbnail, class: "card-img-top  thumbnail") ,video_album_path(video) %>      
         <div class="card-body">
           <h5 class="card-title fs-4 "><%= link_to video.title, video_album_path(video),class:"color" %></h5>
           <p class="card-text text fs-4"><%= video.desc %></p>
           <p class="card-text  fs-4"><%= video.tag_list %></p>
         </div>
       </div>
     </div>
   <% end %>
 </div>
</div>