<div class="mt-3 video1">
  <%= search_form_for @q, url: root_path do |f| %>
    <%= f.search_field :tags_name_cont,class: "search mx-0" %>
    <%= f.submit class:"btn btn-lg fs-1 mx-0 color"%>
  <% end %>
</div>
<%= video_tag "video4.mp4", autoplay: :autoplay,loop: :loop,class:"video mt-3" %>
<div class="container mt-5 mb-5">
  <div class="row ">
    <%  @video_albums.each do |video| %>
      <div class="col-md-4 mt-4 mb-5">
        <div class="card">
          <%= link_to image_tag(video.thumbnail, class: "card-img-top  thumbnail") ,video_album_path(video) %>
          <div class="card-body">
            <h5 class="card-title fs-2 mx-auto "><%= link_to video.title, video_album_path(video),class:"color" %></h5>
            <p class="card-text text fs-3 mx-auto"><%= video.desc %></p>
            <p class="card-text  fs-4">Tag: <%= video.tag_list %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
