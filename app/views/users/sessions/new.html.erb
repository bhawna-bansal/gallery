<div class="container-fluid ">
 <div class="row ">
 <div class="d-none d-md-block col-md-4 p-0">

     <div class="m-0 img">
       <%= image_tag asset_path('background1.png'), :class => "img-fluid h-100"%>
     </div>
   </div>
   <div class="col-md-7 d-flex flex-column  mb-5 mx-5">
     <h1 class="fw-bold mt-4 color">Sign in</h1>
     <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mx -auto">

     <div class="field mt-4">
       <%= f.label :email,:class=>"fs-3" %><br />
       <%= f.email_field :email, autofocus: true, autocomplete: "email",:class=>"fs-5" %>
     </div>

     <div class="field mt-4 fs-4">
       <%= f.label :password,:class=>"fs-3" %><br />
       <%= f.password_field :password, autocomplete: "current-password",:class=>"fs-5" %>
     </div>

      <% if devise_mapping.rememberable? %>
      <div class="field fs-4">
         <%= f.check_box :remember_me %>
         <%= f.label :remember_me %>
      </div>
      <% end %>

     <div class="actions">
      <%= f.submit "Log in",class: "btn btn-primary mt-4 fs-4 text-center " %>
     </div>
     <% end %>
     <div class="mt-4 fs-5 color" >
     <%= render "users/shared/links",class: "mt-4 color" %>
   </div>
  </div>
</div>
</div>