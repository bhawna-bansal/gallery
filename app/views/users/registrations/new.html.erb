<div class="container-fluid  ">
 <div class="row  ">
 
 <div class="d-none d-lg-block col-md-4 p-0">
 <div class="img">
       <%= image_tag asset_path('background3.jpg'), :class => "img-fluid h-100"%>
      </div>
   </div>
    <div class="col-md-7  d-flex flex-column mb-5 mx-5 ">
      <h2 class=" fw-bold mt-4 color">Sign up</h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="mx-auto">
      <div class="field mt-4 ">
        <%= f.label :email,:class=>"fs-3" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email",:class=>"fs-4" %>
      </div>

      <div class="field mt-4 ">
        <%= f.label :password,:class=>"fs-3" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password",:class=>"fs-4"%>
      </div>

      <div class="field mt-4 ">
        <%= f.label :password_confirmation,:class=>"fs-3" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password",:class=>"fs-4" %>
      </div>

      <div class="actions  mt-4 ">
        <%= f.submit "Sign up",class: "btn btn-secondary" %>
      </div>
      <% end %>

      <div class="mt-4 fs-5">
       <%= render "users/shared/links" %>
      </div>
    </div>
  </div>
</div>